
@{
    ViewBag.Title = "writeFile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <h5 class="card-header">Add Text</h5>
        <hr class="my-0" />
        <div class="card-body">

            @using (Html.BeginForm("saveTxt","Home", FormMethod.Post))
            {
                <div class="row ">
                    <div class="mb-3 col-md-6">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Enter Text</label>

                       <input type="text" id="txtdata" name="txtdata" class="form-control"  required autofocus />

                    </div>

                </div>


                <div class="mt-1">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>

            }
        </div>
    </div>
</div>

