@model ShopNowBL.Models.tblStock
@{
    ViewBag.Title = "editProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card mb-4">
            <h5 class="card-header">Edit Product</h5>
            <hr class="my-0" />
            <div class="card-body">

                @using (Html.BeginForm("saveProductAfterEdit", "Stock", FormMethod.Post))
                {
                    <div class="row ">
                        <div class="mb-3 col-md-6">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Product Name</label>
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.CreatedBy)
                            @Html.HiddenFor(model => model.CreatedDate)

                            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", pattern = "[a-zA-Z][a-zA-Z ]{2,}", autofocus = true, required = "required" } })

                        </div>

                        <div class="mb-3 col-md-6">
                            <label class="col-sm-2 col-form-label" for="basic-default-email">Qty</label>

                            <div class="input-group input-group-merge">
                                @Html.EditorFor(model => model.ProductQty, new { htmlAttributes = new { @class = "form-control", min = "1", pattern = "^[0-9]*$", required = "required" } })




                            </div>
                        </div>
                        <div class="mb-3 col-md-6">

                            <label class="col-sm-2 col-form-label" for="basic-default-phone">Base Price</label>

                            @Html.EditorFor(model => model.BasePrice, new { htmlAttributes = new { @class = "form-control", pattern = @"^\s*(?=.*[1-9])\d*(?:\.\d{1,2})?\s*$", required = "required" } })


                        </div>
                        <div class="mb-3 col-md-6">

                            <label class="col-sm-2 col-form-label">Selling Price</label>

                            @Html.EditorFor(model => model.SellingPrice, new { htmlAttributes = new { @class = "form-control", pattern = @"^\s*(?=.*[1-9])\d*(?:\.\d{1,2})?\s*$", required = "required" } })


                        </div>
                        <div class="mb-3 col-md-6">

                            <label class="col-sm-2 col-form-label">Discount</label>

                            @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control", pattern = @"^((100)|(\d{1,2}(.\d*)?))$", required = "required" } })


                        </div>
                    </div>


                    <div class="mt-1">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                }

            </div>
        </div>




    </div>
</div>





